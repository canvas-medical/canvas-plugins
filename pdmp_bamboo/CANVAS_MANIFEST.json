{
    "sdk_version": "0.1.4",
    "plugin_version": "1.0.0",
    "name": "pdmp_bamboo",
    "description": "PDMP Bamboo Plugin - integration for PDMP requests with BambooHealth PMP Gateway. Provides secure certificate-based authentication, structured assessment commands, and comprehensive API endpoints for prescription drug monitoring program data retrieval with HIPAA compliance.",
    "components": {
        "protocols": [
            {
                "class": "pdmp_bamboo.handlers.pdmp_button:PDMPRequestButton",
                "description": "PDMP Request Action Button - Initiates PDMP requests from patient notes with BambooHealth PMP Gateway integration for prescription drug monitoring",
                "data_access": {
                    "event": "SHOW_NOTE_HEADER_BUTTON",
                    "read": [
                        "v1.Note",
                        "v1.Patient",
                        "v1.Staff",
                        "v1.Organization",
                        "v1.PracticeLocation",
                        "v1.Questionnaire"
                    ],
                    "write": [
                        "StructuredAssessmentCommand"
                    ]
                }
            },
            {
                "class": "pdmp_bamboo.routes.report_api:ReportAPI",
                "description": "PDMP Report API - RESTful endpoint for retrieving PDMP reports with patient prescription history and clinical data"
            },
            {
                "class": "pdmp_bamboo.routes.report_iframe_api:ReportIframeAPI",
                "description": "PDMP Report Iframe API - Serves complete PDMP reports as iframe-embeddable HTML pages"
            }
        ],
        "commands": [],
        "content": [],
        "effects": [],
        "views": [],
        "questionnaires": [
            {
                "template": "templates/pdmp_check.yml"
            }
        ]
    },
    "secrets": [
        "TEST_PDMP_API_URL",
        "TEST_PDMP_API_USERNAME",
        "TEST_PDMP_API_PASSWORD",
        "PDMP_API_URL",
        "PDMP_API_USERNAME",
        "PDMP_API_PASSWORD",
        "PDMP_CLIENT_CERT",
        "PDMP_CLIENT_KEY",
        "PDMP_CLIENT_CERT_PATH",
        "PDMP_CLIENT_KEY_PATH",
        "USE_TEST_ENV"
    ],
    "tags": ["pdmp", "healthcare", "integration", "hipaa", "security"],
    "references": [
        "https://docs.bamboohealth.com/",
        "https://www.hhs.gov/hipaa/index.html"
    ],
    "license": "Proprietary",
    "diagram": true,
    "readme": "./README.md"
}
